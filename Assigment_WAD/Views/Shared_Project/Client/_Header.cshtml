                            </li>
                            <li>
                                <a href="#">PAGES</a>
                                <ul class="sub-menu">
                                    <li><a href="@Url.Action("Cart","Client")">Cart</a></li>
                                    <li><a href="@Url.Action("Checkout","Client")">Checkout</a></li>
                                    <li><a href="@Url.Action("Login_Register","Client")">Login & Register</a></li>
                                </ul>
                            </li>
                            @* <li> *@
                            @*     <a href="@Url.Action("Blog","Client")">BLOG</a> *@
                            @* </li> *@
                            <li><a href="@Url.Action("Contact","Client")">CONTACT</a></li>
                        </ul>
                    </nav>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div class="mobile-menu order-12 d-block d-lg-none col"></div>

        </div>
    </div>
</div>
