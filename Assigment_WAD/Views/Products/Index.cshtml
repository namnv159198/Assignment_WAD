@model IEnumerable<Assigment_WAD.Models.Product>

@{
    ViewBag.Title = "Index";
}

   <link rel="stylesheet" href="~/Content/StyleTable.css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">



    <div>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <button type="button" class="btn" style="background: #0275d8; margin-bottom: 10px;">
            <a href="@Url.Action("ShowCart", "ShoppingCart")" style="color: white">
                <i class="fa fa-shopping-cart" style="color: white"> </i>
            </a>
        </button>
        <p>
            @Html.ActionLink("Create Category New", "Index","Categories")
        </p>
    </div>
<table id="Hero">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            <p>Options</p>
        </th>
        <th>

        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.Picture" width="150px" />
            </td>
            <td >

                <button type="button" class="btn btn-success">
                    <a href="@Url.Action("Edit", "Products", new {id = item.ProductID}) ">
                        <i class="fa fa-edit" style="color: white"></i>
                    </a>
                </button>

                <button type="button" class="btn btn-primary">
                    <a href="@Url.Action("Details", "Products", new {id = item.ProductID}) ">
                        <i class="fa fa-eye" style="color: white"></i>
                    </a>
                </button>

                <button type="button" class="btn btn-danger">
                    <a href="@Url.Action("Delete", "Products", new {id = item.ProductID}) ">
                        <i class="fa fa-trash" style="color: white"></i>
                    </a>
                </button>
            </td>

            <td>
                <button type="button" class="btn" style="background: #0275d8">
                    <a href="@Url.Action("AddItem", "ShoppingCart", new {productId = item.ProductID ,quantity = 1}, null)">
                        <i class="fa fa-shopping-cart" style="color: white"> &nbsp; Add to cart</i>
                    </a>
                </button>
            </td>
        </tr>
    }
    </tbody>

  

</table>
