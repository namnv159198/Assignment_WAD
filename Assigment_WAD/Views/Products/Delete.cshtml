@model Assigment_WAD.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared_Project/Admin/_LayoutAdmin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <div id="main-content">
        <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-12">
                        <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Details @Model.Title Product</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index-2.html"><i class="icon-home"></i></a></li>
                        </ul>
                    </div>
                    <div class="col-lg-6 col-md-4 col-sm-12 text-right">
                        <div class="bh_chart hidden-xs">
                            <div class="float-left m-r-15">
                                <small>Visitors</small>
                                <h6 class="mb-0 mt-1"><i class="icon-user"></i> 1,784</h6>
                            </div>
                            <span class="bh_visitors float-right">2,5,1,8,3,6,7,5</span>
                        </div>
                        <div class="bh_chart hidden-sm">
                            <div class="float-left m-r-15">
                                <small>Visits</small>
                                <h6 class="mb-0 mt-1"><i class="icon-globe"></i> 325</h6>
                            </div>
                            <span class="bh_visits float-right">10,8,9,3,5,8,5</span>
                        </div>
                        <div class="bh_chart hidden-sm">
                            <div class="float-left m-r-15">
                                <small>Chats</small>
                                <h6 class="mb-0 mt-1"><i class="icon-bubbles"></i> 13</h6>
                            </div>
                            <span class="bh_chats float-right">1,8,5,6,2,4,3,2</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="post-toolbar-b">
                <button class="btn btn-primary">
                    <a href="@Url.Action("Index","Products")" style="color: white">Back to List</a>
                </button>
            </div>
            <hr />
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="body">
                            <dl class="dl-horizontal">

                                <dt>
                                    @Html.DisplayNameFor(model => model.Title)
                                </dt>
                                <hr />
                                <dd>
                                    @Html.DisplayFor(model => model.Title)
                                </dd>
                                <hr />
                                <dt>
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>
                                <hr />
                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>
                                <hr />
                                <dt>
                                    @Html.DisplayNameFor(model => model.Price)
                                </dt>
                                <hr />
                                <dd>
                                    @Html.DisplayFor(model => model.Price)
                                </dd>
                                <hr />
                                <dt>
                                    @Html.DisplayNameFor(model => model.Picture)
                                </dt>
                                <hr />
                                <dd>
                                    <img src="@Model.Picture" width="200px" />
                                </dd>
                                <hr />
                                <dt>
                                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                                </dt>
                                <hr />
                                <dd>
                                    @Html.DisplayFor(model => model.Category.CategoryName)
                                </dd>
                                <hr />
                                <dt>
                                    @Html.DisplayNameFor(model => model.Gender)
                                </dt>
                                <hr />
                                <dd>
                                    @Html.DisplayFor(model => model.Gender)
                                </dd>
                                <hr />
                            </dl>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <div class="post-toolbar-b ml-20">
                                        <button class="btn btn-outline-danger" type="submit" onclick="return confirm('Do you sure delete this product ?')">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

